                        {% endblock %}


                    {% endif %}
                    {% if  app.request.get('_route')=='page'  %} page {% endif %}
                    {% if  app.request.get('_route')=='contat'  %} active {% endif %}
                    {% if  app.request.get('_route')=='blog'  %} blog et article {% endif %}

                </div>



                    <!-- End liste menu phone -->
                </div>
            </nav>
        </header>
        <!-- endHeader -->


        <!-- Main -->
        <main class="container-fluid">

            {% block content %}

            {% endblock %}

        </main>

        <!-- endMain -->


        <!-- footer -->
        <!-- endFooter -->

        <!-- script -->
        <script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}" ></script>
        <script src="{{ asset('assets/js/bootstrap.min.js') }}" ></script>
        <script src="{{ asset('assets/js/bootstrap.bundle.min.js') }}" ></script>
        <script src="{{ asset('assets/js/bionutri.js') }}" ></script>
        {% block javascripts %}{% endblock %}


    <!-- endScript -->
    </body>
</html>
