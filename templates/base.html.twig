        {% block style %}{% endblock %}
        <style>
            body {
                /* default font-size is 16px - this is set in the default browser stylesheet */
                font-size: 20px;
                font-weight: 400;
                line-height: 1.5;
            }

            /* Increase all font sizes on mobile */
            @media (max-width: 1000px) {
                body {
                    /* default is 1rem or 16px */
                    font-size: 27px;
                    font-weight: 550;
                    line-height: 1.5;
                }
            }

        </style>


    </head>
    <body>

    <!-- Header (PC+phone, Navbar) -->
        <header class="bioDign">
            <div class="p-0 d-none d-lg-block" id="pcDjim">
                <nav class="nav nav-tabs fixed-top shadow-sm bg-light">
                    <a href="{{path('home')}}"><img style="height:40px;" src="{{ asset('assets/img/logo/logoBionutri.jpeg') }}" class="img-thumbnail p-0 m-0 border-0" alt="..."></a>
                    <a href="{{path('home')}}"><img style="height:40px;" src="{{ asset('assets/img/logo/logoNbionutri.jpeg') }}" class="img-thumbnail p-0 m-0 border-0" alt="..."></a>
                    <div class="nav-item">
                        <a class="nav-link {% if  app.request.get('_route')=='home'  %} active {% endif %}" aria-current="page" href="{{path('home')}}">Accueil</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link {% if  app.request.get('_route')=='blog'  %} active {% endif %} " href="{{path('blog')}}">Blog</a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link" href="#">Nous contacter</a>
                    </div>

                    {% if  app.user  %}

                        <div class="d-flex  bd-highlight">
                            <nav class="nav position-absolute top-0 end-0">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">{{ app.user.firstname|slice(0, 2)}}</a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDarkDropdownMenuLink">
                                        <li><a class="dropdown-item" href="{{ path('cart') }}">Mon Panier {% block quantity %}0{% endblock %}</a></li>
                                        <li><a class="dropdown-item" href="#">Another action</a></li>
                                        <li><a class="dropdown-item disabled" href="#">Panier vide </a></li>
                                        <li><a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="{{ path('account') }}">Mon compte</a></li>
                                    </ul>
                                </li>
                            </nav>
                        </div>

                    {% else  %}
                        <nav class="nav position-absolute top-0 end-0">
                            <div class="nav-item">
                                <a class="nav-link {% if  app.request.get('_route')=='app_login'  %} active {% endif %}"  href="{{ path('app_login') }}">Connexion</a>
                            </div><div class="nav-item">
                                <a class="nav-link {% if  app.request.get('_route')=='register'  %} active {% endif %}" href="{{ path('register') }}">Inscription</a>
                            </div>
                        </nav>
                    {% endif %}

                </nav>
            </div>

            <!-- Header (phone, Navbar) -->
            <nav class="navbar d-lg-none p-0 ml-3 fixed-top shadow-sm bg-light d-flex justify-content-sm-between" id="phoneDjim">
                <script src="{{ asset('assets/js/jquery-3.5.1.min.js') }}"></script>
                <div class="container-fluid">
                    <div class="m-0 p-0">
                        <button class="m-0 p-0 navbar-toggler bd-search-docs-toggle d-lg-none" type="button"><svg xmlns="http://www.w3.org/2000/svg" width="90" height="63" viewBox="0 0 30 30" role="img" focusable="false"><title>Menu</title><path stroke="currentColor" stroke-linecap="round" stroke-miterlimit="10" stroke-width="2" d="M4 7h22M4 15h22M4 23h22"/></svg></button>
                        <a href="{{path('home')}}"><img style="height:40px;" src="{{ asset('assets/img/logo/logoBionutri.jpeg') }}" class="img-thumbnail p-0 mx-1 border-0" alt="..."></a>
                    </div>
                    <div class="d-flex w-50">
                        {% block phoneListHead %}

                        {% endblock %}
                    </div>
                    <div class="">
                        <nav class="nav">
                            {% if  app.user  %}

                                <div class="btn-group">
                                    <a class="nav-link dropdown-toggle" href="" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">{{ app.user.firstname|slice(0, 2)}} </a>
                                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-lg-start">
                                        <li><a class="dropdown-item" href="#">Action</a></li>
                                        <li><a class="dropdown-item" href="#">Another action</a></li>
                                        <li><a class="dropdown-item disabled" href="#">Panier vide</a></li>
                                        <li><a class="dropdown-item" href="{{ path('app_logout') }}">Déconnexion</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a class="dropdown-item" href="{{ path('account') }}">Mon compte</a></li>
                                    </ul>
                                </div>
                            {% else  %}
                                <div class="nav-item w-25">
                                    <a class="m-0 p-0 nav-link {% if  app.request.get('_route')=='app_login'  %} active {% endif %}"  href="{{ path('app_login') }}">Connexion</a>
                                </div>
                            {% endif  %}

                        </nav>
                    </div>
                </div>
                <div class="collapse navbar-collapse bg-light p-1 p-lg-0 mt-100 mt-lg-0 d-flex flex-column flex-lg-row flex-xl-row justify-content-lg-end mobileMenu" id="navbarSupportedContent" style="border-radius: 10px;">
                    <!-- Liste menu phone -->
                    <nav class="nav nav-tabs">
                        <div class="nav-item">
                            <a class="nav-link {% if  app.request.get('_route')=='home'  %} active {% endif %}" aria-current="page" href="{{path('home')}}">Produits</a>
                        </div>
                        <div class="nav-item">
                            <a class="nav-link {% if  app.request.get('_route')=='blog'  %} active {% endif %} " href="{{path('blog')}}">blog</a>
                        </div>
                        <div class="nav-item">
                            <a class="nav-link" href="#">Nous contacter</a>
                        </div>
                        <div class="nav-item">
                            <a class="nav-link " href="#" tabindex="-1" aria-disabled="true">.</a>
                        </div>
                    </nav>

                <div class="">
                    {% if  app.request.get('_route')=='home'  %}
