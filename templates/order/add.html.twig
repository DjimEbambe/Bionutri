{% extends 'base.html.twig' %}

{% block title %}Payement ma commmande -Bionutri {% endblock %}

{% block content %}
    <div class="container">
        <h2> Mon Récapitulilatif </h2>
        <p>Vérifier vos information avant de payer </p>
        <hr>
        <div class="row">
            <div class="col-md-5 mt-2">
                <strong>Mon adresse de livraison</strong><br/>

                <div class="form-check">
                    {{ delvery| raw }}
                </div>

                <hr>
                <strong>Mon transporteur</strong><br/>
                <div class="form-check">
                    {{ carrier.name }}<br/>
                    {{ carrier.description }}<br/>
                    {{ carrier.price| number_format(2,',','.') }}
                </div>
            </div>

            <div class="col-md-7">
                <div class="text-center">
                    <b> Ma commande</b>
                </div>
                <div class="order-summary">
                    {% set total = null %}
                    {% for key,product in cart %}
                        <div class="row border-bottom {% if key > 0 %}mt-2 {% endif %}">
                            <div class="col-3">
                                <img src="/uploads/product/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="75px">
                            </div>
                            <div class="col-6 my-auto">
                                {{ product.product.name }}<br/>
                                <small>
                                    {{ product.product.subtitle }}
                                    <br/>
                                    x {{ product.quantity }}
                                </small>
                            </div>
                            <div class="col-3 my-auto">
                                {{ (product.product.price*product.quantity/100)| number_format(2,',',' ') }} $
                            </div>
                        </div>
                        {% set total = total + product.product.price * product.quantity %}
                    {% endfor %}
                </div>

                <hr>
                <strong>Sous Total: </strong>{{ (total/100)| number_format(2,',',' ')}} $<br/>
                <strong>Livraison: </strong>{{ (carrier.price)| number_format(2,',',' ')}} $
                <hr>
                <strong>Total: </strong>{{ (total/100 + carrier.price)| number_format(2,',',' ')}} $<br/>
                <div class="d-grid gap-2">
                    <a class="btn btn-success mt-3" style="width:100%"> Payer | {{ (total/100 + carrier.price)| number_format(2,',',' ')}} $</a>
                </div>
                <hr>


            </div>
        </div>
    </div>
{% endblock %}
