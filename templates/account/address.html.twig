{% extends 'base.html.twig' %}

{% block title %}Mes adresses {% endblock %}

{% block content %}

    <div class="container">


        <h1>Mes adress</h1>
        c'est dans ce compte que vous allez pouvoir gerer vos adresses
        <hr>

        {# dump(app.user) #}

        {% if app.user.addresses|length == 0 %}
            <p class="text-center">
                Vous n'avez pas encore ajouter une adresses de votre compte, Pour en ajouter:<a href="{{ path('account_address_add') }}" class="">Cliquez ici</a>
            </p>
            <hr>
        {% else %}
            <a href="{{ path('account_address_add') }}" class="btn btn-info btn-sm float-right mb-3">Ajouter mes adress</a>
            <div class="row mb-4">
                {% for address in app.user.addresses %}
                    <div class="col-md-4 m-2">
                        <div class="card" style="width: 18rem;">
                            <div class="card-body">
                                <h5 class="card-title">{{address.name}}</h5>
                                <p class="card-text">
                                    {{address.address}} <br> {{address.commune}} {{address.city}} <br> {{address.reference}}
                                </p>
                                <a href="{{ path('account_address_edit', {'id': address.id}) }}">Modifier</a> | <a href="{{ path('account_address_delete',{'id':address.id}) }}">Supprimer</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
        <a href="{{ path('account') }}" class="">Retour</a>

    </div>
{% endblock %}
